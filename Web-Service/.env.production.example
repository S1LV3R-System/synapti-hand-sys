# ============================================================================
# SynaptiHand Cloud Production Environment Configuration
# ============================================================================
# Copy this file to .env and update with your production values
# NEVER commit .env file with real secrets to version control
# ============================================================================

# --------------------------------------------------------------------------
# PostgreSQL Database (REQUIRED - Change these!)
# --------------------------------------------------------------------------
POSTGRES_USER=synaptihand
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_DB=synaptihand

# --------------------------------------------------------------------------
# Authentication (REQUIRED - Must be unique per deployment)
# --------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_GENERATE_NEW_SECRET_WITH_OPENSSL
JWT_EXPIRES_IN=7d

# --------------------------------------------------------------------------
# CORS Configuration (Update for your domain)
# --------------------------------------------------------------------------
CORS_ORIGIN=https://app.synaptihand.com

# --------------------------------------------------------------------------
# Google Cloud Storage (REQUIRED for video processing)
# --------------------------------------------------------------------------
GCS_BUCKET_NAME=handpose-system
GCS_PROJECT_ID=praxis-dolphin-467607-s8
# Note: Place gcs-service-account.json in ./secrets/ directory
ENABLE_MOCK_STORAGE=false

# --------------------------------------------------------------------------
# File Upload Limits
# --------------------------------------------------------------------------
MAX_FILE_SIZE=524288000

# --------------------------------------------------------------------------
# Cleanup Configuration
# --------------------------------------------------------------------------
CLEANUP_ENABLED=true
CLEANUP_RETENTION_DAYS=15
CLEANUP_CRON=0 0 2 * * *

# --------------------------------------------------------------------------
# Optional: Rate Limiting
# --------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------------------------------------
# Optional: Email Configuration (for notifications)
# --------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@synaptihand.com

# --------------------------------------------------------------------------
# Optional: Monitoring and Logging
# --------------------------------------------------------------------------
# LOG_LEVEL=info
# SENTRY_DSN=https://your-sentry-dsn
