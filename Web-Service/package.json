{
  "name": "synaptihand-web-service",
  "version": "1.0.0",
  "description": "SynaptiHand Medical Platform - Proxy Server",
  "main": "proxy-server.js",
  "scripts": {
    "proxy": "node proxy-server.js",
    "dev:backend": "cd backend-node && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run proxy\"",
    "start": "npm run dev:all",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "http-proxy": "^1.18.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.1.2",
    "playwright": "^1.57.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
